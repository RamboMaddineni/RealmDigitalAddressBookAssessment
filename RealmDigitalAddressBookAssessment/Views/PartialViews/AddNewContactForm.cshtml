<!-- Modal Structure -->
<div id="addnewcontactmodal" class="modal">
    <div class="modal-content">

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="first_name" type="text" class="validate">
                <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="last_name" type="text" class="validate">
                <label for="last_name">Last Name</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6" id="contact-row">
                <i class="material-icons prefix">phone</i>
                <input id="contact-number" type="text" class="validate">
                <label for="contact-number">Contact Number*</label>
            </div>

            <div class="input-field col s6" id="email-row">
                <i class="material-icons prefix">email</i>
                <input id="email" type="text" class="validate">
                <label for="email">Email*</label>

            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <a class="waves-effect waves-light btn" id="save-contact">Save <i class="material-icons right">send</i></a>
            </div>
        </div>

    </div>

</div>


