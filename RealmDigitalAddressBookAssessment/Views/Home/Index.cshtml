@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
    <div class="col s6">
        <div class="card horizontal">

            <div class="card-stacked">
                <div class="card-content">
                    <table id="datatable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th class="contact-name-header">First Name</th>
                                <th class="contact-name-header">Last Name</th>
                                <th class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody id="contacts-body">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div class="col s1"></div>
    <div class="col s5">
        <div id="contact-details-container" style="display: none">
            <div class="card horizontal">
                <div class="card-stacked">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12">
                                <ul class="tabs">
                                    <li class="tab col s6"><a href="#tab-contact-numbers" class="active">Contact Numbers</a></li>
                                    <li class="tab col s6"><a href="#tab-emails">Emails</a></li>
                                </ul>
                            </div>
                            <div id="tab-contact-numbers" class="col s12">
                                <partial name="~/Views/PartialViews/GetContactNumbers.cshtml" />
                            </div>
                            <div id="tab-emails" class="col s12">
                                <partial name="~/Views/PartialViews/GetEmailAddress.cshtml" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<partial name="~/Views/PartialViews/AddNewContactForm.cshtml" />

<partial name="~/Views/PartialViews/UpdateContactForm.cshtml" />


@section Scripts {

    <script src="~/js/site.js" type="text/javascript"></script>
}


