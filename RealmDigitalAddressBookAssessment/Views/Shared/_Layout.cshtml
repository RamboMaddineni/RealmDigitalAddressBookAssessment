<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RDAddressBook.Assessment</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/lib/Materialize/materialize.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="teal darken-4 lighten-1" role="navigation">
            <div class="nav-wrapper container">
                <a id="logo-container" href="/" class="brand-logo">AddressBook</a>
                <ul class="right hide-on-med-and-down">
                    <li><a class="nav-link text-dark modal-trigger" id="add-new-contact" data-target="addnewcontactmodal" href="#addnewcontactmodal"><i class='material-icons left'>contact_phone</i> Add New</a></li>
                    
                </ul>
                <ul id="nav-mobile" class="sidenav">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="AddressBook" asp-action="AddressBook">AddressBook</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src='~/lib/jquery/dist/jquery.min.js' type="text/javascript"></script>
    <script src='https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js'></script>
    <script src="~/lib/Materialize/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
